#include<xc.h>
#define _XTAL_FREQ 6000000 //6mhz 
unsigned char value;
void main(){
    TRISC = 0x0F;
    TRISD = 0x00;
    PORTC = 0x0;
    PORTD = 0x00;

while(1){
    value = PORTC;
    switch(value){
        case 0x0E: PORTD = 0x20; 
        break;
        case 0x0D: PORTD = 0x08;
        break;
        case 0x0B: PORTD = 0x28;
        break;
        case 0x07: PORTD = 0X00;
        break;
    }
}
}
